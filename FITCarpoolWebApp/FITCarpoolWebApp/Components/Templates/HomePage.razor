@page "/"
@using Radzen.Blazor

<div class="login-toggle-area">
    <RadzenLabel Text="Toggle guest mode to explore the app without logging in."></RadzenLabel>
    <RadzenToggleButton @bind-Value="@guestMode" TValue="bool" Text="@(guestMode ? "Guest Mode On" : "Guest Mode Off")" Change="@OnToggleChange"></RadzenToggleButton>
</div>

@code {
    private bool guestMode = false;

    void OnToggleChange(bool value)
    {
        guestMode = value;
        // Implement the logic to change the layout or available features based on guestMode state
    }
}
