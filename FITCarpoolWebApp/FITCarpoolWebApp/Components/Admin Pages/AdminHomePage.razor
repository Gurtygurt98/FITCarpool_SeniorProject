@page "/Admin/Home Page"

@using MudBlazor
@using Radzen.Blazor
@inject NavigationManager NavigationManager
<RadzenCard Class="rz-my-12 rz-mx-auto" Style="width:75%">
    <RadzenStack>
        <MudText Typo="Typo.h2" Align="Align.Center">Database Management Pages</MudText>
            <RadzenButton Text="Update Profile" Click="@(() => NavigateTo("Users Management"))" />
        </RadzenStack>
    </RadzenCard>
@code {
    private void NavigateTo(string page)
    {
        NavigationManager.NavigateTo($"/Admin/{page}");
    }
}
